.wrapper
  width: 100%
  height: 100%
  background-size: cover
  background-position: 50% 50%
  position: relative

.picture
  display: none
  width: 40%
  height: 40%
  position: absolute
  left: 50%
  top: 50%
  //transform: translate(-50%, -50%)
  text-align: center
  border: 1px dashed rgba(#000, .2)
  font-size: 0
  transition: border .2s ease-out

  &:hover
    border: 1px dashed rgba(#000, .8)

    &:after
      border-color: transparent transparent rgba(#000, .8) transparent

  &:after
    content: ''
    position: absolute
    right: 5px
    bottom: 5px
    width: 0
    height: 0
    border-style: solid
    border-width: 0 0 10px 10px
    border-color: transparent transparent rgba(#000, .2) transparent
    anim()


.plain_wrapper
  margin: 10px
  width: auto

.plain
  display: block
  width: 100%

.svg
  display: block

