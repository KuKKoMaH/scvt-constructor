.mask-wrapper
  svg.mask-svg(xmlns="http://www.w3.org/2000/svg" version="1.1" )
    defs
      filter#dropshadow(height="130%")
        feGaussianBlur(in="SourceAlpha" stdDeviation="3")
        feOffset(dx="3" dy="3" result="offsetblur")
        feMerge
          feMergeNode
          feMergeNode(in="SourceGraphic")
      clipPath.mask-path
    g(style="filter: url(#dropshadow);")
      image.mask-image(xlink:href='' width="100%" height="100%" preserveAspectRatio="xMidYMid slice")