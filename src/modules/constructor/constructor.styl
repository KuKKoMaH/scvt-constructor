$headerHeight = 50px;
$footerHeight = 50px;
$sidebarWidth = 150px + 8px + 8px;
.wrapper
  height: 100%
  width: 100%
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.header
  position: absolute
  top: 0
  left: 0
  width: 100%

.footer
  position: absolute
  bottom: 0
  left: 0
  width: 100%

.sidebar
  width: $sidebarWidth
  top: $headerHeight
  bottom: $footerHeight
  padding: 8px
  position: absolute

.left
  left: 0

.right
  right: 0

.content
  position: absolute
  top: $headerHeight
  bottom: $footerHeight
  left: $sidebarWidth
  right: $sidebarWidth
  padding: 8px 0
  overflow: hidden
