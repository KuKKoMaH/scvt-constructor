.wrapper
  height: $footer-height
  line-height: $footer-height
  background: #2d4348
  text-align: center
  padding-left: 250px
  padding-right: 400px
  white-space: nowrap

.share
  display: inline-block
  vertical-align: middle
  line-height: 1
  margin-right: 60px
  @media (max-width: 1100px)
    margin-right: 10px

.text
  display: inline-block
  vertical-align: middle
  font-size: 16px
  color: #ffffff
  margin-right: 20px

.icon
  display: inline-block
  vertical-align: middle
  margin: 0 12px
  cursor: pointer
  anim()
  @media (max-width: 1100px)
    margin: 0 6px

  &:hover
    opacity: .8

for icon in 'vk' 'fb' 'tw' /*'ins'*/ 'ok'
  .{icon}
    background: url('modules/footer/sprite-' + icon + '.svg')