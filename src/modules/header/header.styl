.wrapper
  padding: 0 8px
  height: 50px
  line-height: 1
  width: 100%
  background: #FFFDD9
  border-bottom: 1px solid #999999
  text-align: right

  &:before
    content: ''
    display: inline-block
    height: 100%
    vertical-align: middle

.image-wrapper
  float: left

.logo
  float: left
  margin-top: 7px
  text-align: center

.image-wrapper,
.logo,
.menu,
.contacts
  vertical-align: middle
  display: inline-block

