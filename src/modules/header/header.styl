.image
  margin-right: 1em
  
.title
  font-size: 24px

.subtitle
  font-size: 12px

.menu
  text-align: right

  ul
    margin: 0
    padding: 0

  li
    display: inline-block
    vertical-align: middle
    margin: 0 2%

  a
    display: block
    font-size: 18px
    color: #000000
    text-decoration: none
    padding-bottom: 3px
    border-bottom: 2px solid transparent
    anim()

    &:hover
      border-bottom: 2px solid #000


