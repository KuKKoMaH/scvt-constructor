.wrapper
  height: $header-height
  line-height: 1
  width: 100%
  background: #EFD8A8
  position: relative
  z-index: 1

.logo
  float: left
  width: $sidebar-width
  margin-top: 2px
  text-align: center

.title
  font-size: 24px

.subtitle
  font-size: 12px

.menu
  text-align: center

  ul
    margin: 0
    padding: 0
    text-align: center
    //line-height: 0
    //font-size: 0
    //&:after
    //  content: ''
    //  display: inline-block
    //  width: 100%

  li
    display: inline-block
    vertical-align: middle
    margin: 0 1%

    @media (max-width: 1100px)
      margin: 0 .5%


  a
    font-size: 16px
    display: block
    height: 100%
    cursor: pointer
    color: inherit
    text-decoration: none
    padding: 0 5px
    border-bottom: 2px solid transparent
    line-height: $header-height
    anim()

    &:hover,
    &.active
      background: rgba(#000, 0.08)
      border-bottom: 2px solid #000

.contacts
  float: right
  width: $sidebar-width
  margin-top: 3px
  text-align: center
  position: relative

.phone
  font-size: 18px
  margin-bottom: 1px

.work
  font-size: 12px
  letter-spacing: 1px
  color: #666666
  margin-top: 3px

.callback
  font-size: 14px
  color: #2E3192
  cursor: pointer

  &:hover
    text-decoration: underline