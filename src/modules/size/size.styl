.wrapper
  text-align: center

.minus,
.size,
.plus
  display: inline-block
  vertical-align: middle

.minus,
.plus
  cursor: pointer

.minus
  background: url(modules/size/sprite-minus.svg)

.size
  background: #ffffff
  border: 1px solid #E3E3E3
  width: 55px
  height: 24px
  line-height: 24px
  border-radius: 4px
  margin: 0 5px

.plus
  background: url(modules/size/sprite-plus.svg)
