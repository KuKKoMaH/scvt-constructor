.wrapper
  margin: 0 2px
  //border-bottom: 1px solid white
  //margin: 0 2px 5px
  //padding-bottom: 5px
  text-align: center
  display: none

  &:after
    content: ''
    display: block
    height: 1px
    background: #fff
    margin-top: 4px

.text
  font-size: 16px
  display: inline-block
  vertical-align: middle

.input
  margin: 0 5px
  display: inline-block
  vertical-align: middle
  position: relative

.count
  border-radius: 4px
  line-height: 24px
  height: 24px
  width: 30px
  background: #ffffff
  border: 1px solid #E3E3E3
  display: block
  margin-right: 20px

.button
  position: absolute
  right: 0
  padding: 4px
  cursor: pointer
  anim()

  &:active
    opacity: 0.7

  &:after
    content: ''
    display: block
    border-left: 6px solid transparent
    border-right: 6px solid transparent

.minus
  bottom: 0
  &:after
    border-top: 5px solid #000

.plus
  top: 0
  &:after
    border-bottom: 5px solid #000
