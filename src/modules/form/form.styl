.form
  display: block

  p
    text-align: center
    margin: 0 0 .75em
    font-weight: 500

  :global
    .screen-reader-response
      display: none
    .wpcf7-response-output
      text-align: center
      color: #000
    .wpcf7-not-valid-tip
      display: block
      font-size: 10px
      line-height: 10px
      margin-top: 2px
      color: #000

    .wpcf7-form-control-wrap
      display: block
      margin-bottom: 5px

    .wpcf7-radio
      .wpcf7-list-item
        display: block
        position: relative

      label
        display: block
        cursor: pointer
        margin-left: 8px

        &:before
          content: '- '
          display: inline

      input
        display: none

        &:checked + .wpcf7-list-item-label:before
          content: ''
          display: inline-block
          position: absolute
          right: 2px
          top: 50%
          margin-top: -3px
          width: 6px
          height: 6px
          border-radius: 50%
          background: #000

      .wpcf7-list-item-label:after
        content: ''
        display: inline-block
        position: absolute
        right: 0
        top: 50%
        margin-top: -5px
        width: 10px
        height: 10px
        border: 1px solid #000
        border-radius: 50%

    .wpcf7-checkbox
      .wpcf7-list-item
        display: block
        position: relative

      label
        display: block
        cursor: pointer

      input
        display: none

        &:checked + .wpcf7-list-item-label:before
          content: ''
          display: inline-block
          position: absolute
          right: -5px
          top: 50%
          margin-top: -7px
          background: url(modules/form/sprite-checkbox.svg)

      .wpcf7-list-item-label:after
        content: ''
        display: inline-block
        position: absolute
        right: 0
        top: 50%
        margin-top: -5px
        width: 10px
        height: 10px
        border: 1px solid #000


.number
  position: relative

  :global
    .wpcf7-form-control-wrap
      position: absolute
      right: 0
      top: 0
    .wpcf7-text
      width: 25px
      border: 1px solid #7F7F7F
      text-align: center
      background-color: transparent
      font: inherit
      font-size: 15px
      line-height: 20px
      height: 20px
      border-radius: 3px


.close
  position: absolute
  right: 10px
  top: 10px
  background: url(modules/form/sprite-close.svg)
  cursor: pointer
  anim()

  &:hover
    opacity: .8

