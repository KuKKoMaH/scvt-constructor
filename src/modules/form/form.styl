.button
  display: inline-block
  vertical-align: middle
  //position: absolute
  //right: 10px
  //bottom: 40px
  background: #E48520
  border: 2px solid #fff
  text-align: center
  color: #fff
  line-height: 1
  padding 8px 18px
  cursor: pointer
  z-index: 2
  border-radius: 18px
  anim()

  &:hover
    opacity: .8

  &:active
    opacity: 1


.wrapper
  position: absolute
  bottom: 0
  width: 100%
  max-width: 800px;
  max-height: 100%
  left: 50%
  pointer-events: none
  opacity: 0
  transform: translate3d(-50%, $footer-height, 0)
  transition: all .3s ease-out
  z-index: 2
  overflow: auto;
  background: #E6FFFE
  border: 1px solid #999999
  border-radius: 6px 6px 0 0
  padding: 18px 24px
  font-size: 16px

  &_active
    pointer-events: all
    opacity: 1
    transform: translate3d(-50%, 0, 0)

