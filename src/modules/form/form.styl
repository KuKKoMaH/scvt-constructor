  font-family: inherit
  font-weight: 300
  outline: 0

.textarea
  height: 70px
  resize: none

.files
  //width: 100%
  position: relative
  overflow: hidden
  span
    display: block
    width: 100%
    padding-left: 20px
    color: #000
    line-height: 32px

  input
    position: absolute
    right: 0
    top: 0
    width: 300%
    height: 300%
    opacity: 0
    cursor: pointer

  &:before
    content: ''
    display: block
    background: url(modules/form/sprite-file.svg)
    position: absolute
    left: 0
    top: 50%
    transform: translateY(-50%)

  &-wrapper
    padding: 0 12px

