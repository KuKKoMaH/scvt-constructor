.wrapper
  border: 1px solid #D9D9D9
  background: #E2E2E2
  padding: 4px 0
  margin: 0 0 8px
  list-style: none

.item
  margin-left: -2px
  height: 35px
  line-height: 35px
  padding-left: 10px
  cursor: pointer
  border-left: 2px solid transparent
  position: relative
  anim()

  &:hover
    background: #D6D6D6
    border-left: 2px solid #000

.active
    background: #D6D6D6
    border-left: 2px solid #000
