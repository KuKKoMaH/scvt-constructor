.wrapper
  //border: 1px solid #D9D9D9
  background: #DBF3ED
  padding: 4px 0
  margin: 0 0 8px
  list-style: none
  border-radius: 4px

.item
  margin-left: -2px
  height: 35px
  line-height: 35px
  padding-left: 10px
  cursor: pointer
  border-left: 2px solid transparent
  position: relative
  anim()

  &:hover
    background: #BFE2D7
    border-left: 2px solid #3C4048

.upload:after
  content: ''
  display: inline-block
  background: url(modules/list/sprite-upload-small.svg)
  float: right
  margin: 8px 8px 0 0

.active
    background: #BFE2D7
    border-left: 2px solid #3C4048
